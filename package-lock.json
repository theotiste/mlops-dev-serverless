- name: Setup Node.js
  uses: actions/setup-node@v4
  with:
    node-version: 18
    # cache: 'npm'   # ← supprime cette ligne si tu n’as pas de lock

- name: Install Node deps (plugins Serverless, etc.)
  run: |
    if [ -f package-lock.json ]; then
      npm ci
    else
      npm install --no-audit --no-fund
    fi
